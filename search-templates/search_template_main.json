{
  "script": {
    "lang": "mustache",
    "source":
    """
    {
      "track_total_hits": true,

      {{#page_size}}
      "size": "{{page_size}}",
      {{/page_size}}

      {{#page_start}}
      "from": "((page_start}}",
      {{/page_start}}

      {{#sort}}
      "sort": {{#toJson}}sort{{/toJson}},
      {{/sort}}

      "query": {

        "function_score": {
          "query": {
            "bool": {
              "filter": {{#toJson}}filters{{/toJson}}

              {{#excluded_search_terms}}
              ,"must_ not": [
                {
                  "multi_match": {
                    "query": "{{excluded_search_terms}}",
                    "type": "cross_fields",
                    "fields": [
                      "title_x.stemmed",
                      "description.stemmed"
                    ],
                    "operator": "or"
                  }
                }
              ]
              {{/excluded_search_terms}}

              {{^fuzziness}}

              {{#unquoted_search_terms}}
              ,"must": [
                {
                  "multi_match": {
                    "query": "{{unquoted_search_terms}}",
                    "type": "cross_fields",
                    "fields": [
                      "title_x.{{title_subfield}}{{^title_subfield}}stemmed{{/title_subfield}}",
                      "description.{{desc_subfield}}{{^desc_subfield}}stemmed{{/desc_subfield}}"
                    ],
                    "operator": "and"
                  }
                }
                {{#quoted_search_terms}}
                ,
                {
                  "multi_match": {
                    "query": "{{quoted_search_terms}}",
                    "type": "phrase",
                    "fields": ["title_x","description"]
                  }
                }
                {{/quoted_search_terms}}
              ]
              {{/unquoted_search_terms}}

              {{^unquoted_search_terms}}
              {{#quoted_search_terms}}
              ,"must": [
                {
                  "multi_match": {
                    "query": "{{quoted_search_terms}}",
                    "type": "phrase",
                    "fields": ["title_x^100","description"]
                  }
                }
              ]
              {{/quoted_search_terms}}
              {{/unquoted_search_terms}}

              {{/fuzziness}}

              {{#unquoted_search_terms}}
              ,"should": [
                {
                  "multi_match": {
                    "query": "{{unquoted_search_terms}}",
                    "type": "best_fields",
                    "fields": [
                      "title_x.stemmed^100",
                      "description.stemmed"
                    ],
                    "operator": "and",
                    "boost": 10
                    {{#fuzziness}}
                    ,"fuzziness": "{{fuzziness}}"
                    {{/fuzziness}}
                  }
                },
                {
                  "multi_match": {
                    "query": "{{unquoted_search_terms}}",
                    "type": "best_fields",
                    "fields": [
                      "title_x.stemmed^100",
                      "description.stemmed"
                    ],
                    "operator": "or",
                    "boost": 10
                  }
                },
                {
                  "multi_match": {
                    "query": "{{unquoted_search_terms}}",
                    "type": "phrase",
                    "fields": [
                      "title_x.stemmed^100",
                      "description.stemmed"
                    ],
                    "boost": 10
                  }
                }
              ]
              {{/unquoted_search_terms}}
            }
          },

          "functions": [

            {{#now_date}}
            {
              "filter": {"exists": {"field": "created_at"}},
              "gauss" {"created_at": {"origin": "{{now_date}}", "scale": "1825d", "offset": "1825d", "decay": 0.7}},
              "weight": 2
            },
            {
              "filter": {"bool":{"must_not":[{ "exists": {"field": "created_at"}} }]}},
              "script_score": {"script": {"source": "1825"}
            },
            {{/now_date}}

            {
              "filter": {"exists": {"field": "average_rating"}},
              "script_score": {"script": {"source": "doc['average_rating'].value"}
              }
            },
            {
              "filter": {"bool":{"must_not":[ {"exists": {"field": "average_rating"}} ] }},
              "script_score": {"script": {"source": "3"}
              }
            }

          ],
          "boost_mode": "multiply"
        }
      },

      {{#postfilters}}
      "post_filter": {{#toJson}}postfilters{{/toJson}},
      {{/postfilters}}

      "aggs" :

        {{#aggregations}}
        {{#toJson}}aggregations{{/toJson}}
        {{/aggregations}}
      
        {{^aggregations}}
        {
          "available": {
            "terms": { "field": "available" }
          },
          "brands": {
            "terms": { "field": "brand" }
          },
          "tags": {
            "terms": { "field": "tags" }
          },
          "dates": {
            "date_histogram": {"field": "created_at","calendar_interval": "year"}
          },
          "prices": {
            "histogram": {"field": "price","interval": 50,"min_doc_count": 1}
          }
        }
        {{/aggregations}}

      ,"sort": [
        {{#sorts}}
        {{#toJson}}sort{{/toJson}}
        {{^last}},{{/last}}
        {{/sorts}}

        {{^sorts}}
        {"_score": "desc"}
        {{/sorts}}
      ]

      ,"suggest": {
        "spelling": {
          "text": "{{unquoted_search_terms}}",
          "term": {
            "field": "allcontent",
            "size": 3,
            "min_doc_freq": 1
          }
        }
      },

      "_source": [

        {{#source_fields}}
        "{{source_field}}"
        {{^last}},{{/last}}
        {{/source_fields}}

        {{^source_fields}}
        "title_x",
        "categories"
        {{/source_fields}}
        
      ]
    }
    """
  }
}
