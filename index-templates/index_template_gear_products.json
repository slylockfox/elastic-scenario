{
  "index_patterns": ["gear_products"],
  "template": {
    "settings": {
      "index": {
        "default_pipeline": "ingest_pipeline_gear_products",
        "analysis": {
          "filter": {
            "gear_synonym_filter": {
              "type": "synonym",
              "synonyms_set": "gear_synonym_set",
              "updateable": true
            },
            "gear_edge_ngram_filter": {
              "type": "edge_ngram",
              "min_gram": 3,
              "max_gram": 20
            }
          },
          "analyzer": {
            "gear_stemmed": {
              "tokenizer": "standard",
              "char_filter": [
                "html_strip"
              ],
              "filter": [
                "lowercase",
                "kstem"
              ]
            },
            "gear_synonyms": {
              "tokenizer": "standard",
              "char_filter": [
                "html_strip"
              ],
              "filter": [
                "lowercase",
                "gear_synonym_filter"
              ]
            },
            "gear_typeahead": {
              "type": "custom",
              "tokenizer": "standard",
              "filter": [
                "lowercase",
                "gear_edge_ngram_filter"
              ]
            }
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "average_rating": {
          "type": "float"
        },
        "created_at": {
          "type": "date",
          "format": "MMMM dd, yyyy||MMMM d, yyyy"
        },
        "categories": {
          "type": "keyword",
              "ignore_above": 256
        },
        "description": {
          "type": "text",
          "fields": {
            "stemmed": {
              "type": "text",
              "analyzer": "gear_stemmed"
            },
            "synonyms": {
              "type": "text",
              "search_analyzer": "gear_synonyms"
            }
          }
        },
        "features": {
          "type": "keyword",
              "ignore_above": 256
        },
        "main_category": {
          "type": "keyword",
              "ignore_above": 256
        },
        "parent_asin": {
          "type": "keyword",
              "ignore_above": 256
        },
        "price": {
          "type": "float"
        },
        "rating_number": {
          "type": "long"
        },
        "reviews": {
          "type": "nested"
        },
        "title_x": {
          "type": "text",
          "fields": {
            "stemmed": {
              "type": "text",
              "analyzer": "gear_stemmed"
            },
            "synonyms": {
              "type": "text",
              "search_analyzer": "gear_synonyms"
            },
            "ngrams": {
              "type": "text",
              "analyzer": "gear_typeahead"
            }
          }
        },
        "typeahead": {
          "type": "completion",
          "contexts": [
            {
              "name": "typeahead_context",
              "type": "category",
              "path": "typeahead_context"
            }
          ]
        },
        "typeahead_context": {
          "type": "keyword"
        },
        "available": {
          "type": "boolean"
        },
        "brand": {
          "type": "keyword",
              "ignore_above": 256
        },
        "allcontent": {
          "type": "text"
        },
        "tags": {
          "type": "keyword"
        }
      }
    }
  }
}